{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "preset": "conventionalcommits",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "refactor", "release": false },
          { "type": "test", "release": false },
          { "type": "build", "release": false },
          { "type": "ci", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ æ–°åŠŸèƒ½" },
            { "type": "fix", "section": "ğŸ› Bugä¿®å¤" },
            { "type": "perf", "section": "âš¡ æ€§èƒ½ä¼˜åŒ–" },
            { "type": "revert", "section": "âª å›æ»š" },
            { "type": "refactor", "section": "â™»ï¸ ä»£ç é‡æ„" },
            { "type": "docs", "section": "ğŸ“š æ–‡æ¡£æ›´æ–°", "hidden": true },
            { "type": "style", "section": "ğŸ’„ æ ·å¼æ›´æ–°", "hidden": true },
            { "type": "chore", "section": "ğŸ”§ å…¶ä»–æ›´æ–°", "hidden": true },
            { "type": "test", "section": "âœ… æµ‹è¯•", "hidden": true },
            { "type": "build", "section": "ğŸ“¦ æ„å»º", "hidden": true },
            { "type": "ci", "section": "ğŸ‘· CI/CD", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i 's/^version: .*/version: ${nextRelease.version}/' pubspec.yaml"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "release-files/readeck-app-*.apk",
            "label": "Android APK v${nextRelease.version}"
          },
          {
            "path": "release-files/readeck-app-*.aab",
            "label": "Android App Bundle v${nextRelease.version}"
          }
        ],
        "successComment": false,
        "failComment": false,
        "releasedLabels": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["pubspec.yaml", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
